<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="@dimen/dim_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:onClick="profileButton"
            android:text="@string/my_profile_button"
            android:textAllCaps="false" />

        <Button
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:onClick="aboutButton"
            android:text="@string/about_alc_button"
            android:textAllCaps="false" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/sec"
        android:layout_toLeftOf="@+id/first_row"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/alc_logo"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to ALC 4.0"
            android:textStyle="italic"
            style="@style/TextAppearance.MaterialComponents.Headline4"/>
    </LinearLayout>


</RelativeLayout>